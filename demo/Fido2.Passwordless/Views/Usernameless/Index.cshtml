@model PasswordlessModel
@{
}
@{
    ViewData["Title"] = "Register without password";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="DisplayName" class="form-control" autocomplete="name" value="bruno" aria-required="true" />
                <label asp-for="DisplayName"></label>
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="button" class="w-100 btn btn-lg btn-primary">Register</button>
        
            <input type="hidden" asp-for="AttestationResponse" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        var urlAttestationOptions = '@Url.Action("GetAttestationOptions", "Usernameless")'
    </script>
    <script src="@Url.Content("~/js/register.usernameless.js")"></script>
}
